{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "Node",
    "lib": ["es2020"],
    "allowJs": true,

    "outDir": "build",
    "rootDir": "src",
    "strict": false,
    // "noImplicitAny": true,
    "esModuleInterop": false,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "incremental": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/**", "dist"],
  "types": ["jest", "node"],
  "typeRoots": ["node_modules/@types", "src/types", "node_modules/svelte/types"]
}
